@model Computony.Models.SubCat

@{
    ViewBag.Title = "Details";
}

<br />

<div class="container">
    <div>
        <h4>@Model.Name details</h4>
        <hr />

        @if (Model.Products.Count == 0)
        {
            <p> No Products added. </p>
        }
        else
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Products.ToList())
                    {
                        <tr>
                            <td> @item.ID</td>
                            <td> @Html.ActionLink(item.Name, "Details/" + item.ID, "Products")</td>
                        </tr>
                    }
                    <tr>
                        <td colspan="2" style="text-align:center"> @Html.ActionLink("Back to Home", "Index", "Home")</td>
                    </tr>
                </tbody>
            </table>
        }
    </div>
</div>